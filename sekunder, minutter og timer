#include <stdio.h>
#define MINUTES 60
#define HOURS (MINUTES*60)

int main(void)
{
    int seconds, minutes, hours;

    printf("Enter seconds: ");
    scanf("%d", &seconds);

    minutes=seconds/MINUTES;
    seconds=seconds%MINUTES;
    hours=minutes/HOURS;
    secounds=minutes%HOURS;
    
    printf(¨%d secound, %d minutes, %d hours \n¨, secounds, minutes, hours);
    return(0);
}

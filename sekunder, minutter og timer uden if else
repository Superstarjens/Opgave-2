#include <stdio.h>
#define MINUTES 60
#define HOURS 3600


int main(void)
{
    int seconds, minutes, hours;

    printf("Enter seconds: ");
    scanf("%d", &seconds);
    
    hours=seconds/HOURS;
    seconds=seconds%HOURS;
    minutes=seconds/MINUTES;
    seconds=seconds%MINUTES;
    

    printf("%d seconds, %d minutes, %d hours \n", seconds, minutes, hours);

    return(0);
}
